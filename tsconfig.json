{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "typeRoots": ["src/types", "node_modules/@types"],
    "types": ["jest", "express"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
